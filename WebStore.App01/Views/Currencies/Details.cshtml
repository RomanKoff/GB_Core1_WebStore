@model CurrencyModel
@{
	ViewBag.PageTitle = "Параметры валюты";
}

<table class="table table-bordered">
	<tr>
		<td><label asp-for="Id" class="control-label"></label></td>
		<td>@Model.Id</td>
	</tr>
	<tr>
		<td><label asp-for="Name" class="control-label"></label></td>
		<td>@Model.Name</td>
	</tr>
	<tr>
		<td><label asp-for="Country" class="control-label"></label></td>
		<td>@Model.Country</td>
	</tr>
	<tr>
		<td><label asp-for="Unit" class="control-label"></label></td>
		<td>@Model.Unit</td>
	</tr>
	<tr>
		<td><label asp-for="Char" class="control-label"></label></td>
		<td>@Model.Char</td>
	</tr>
	<tr>
		<td><label asp-for="Rate" class="control-label"></label></td>
		<td>@Model.Rate</td>
	</tr>
</table>

<p>
	<a asp-action="Index">Назад к списку</a>
</p>
