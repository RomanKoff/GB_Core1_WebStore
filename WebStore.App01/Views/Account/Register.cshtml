@model RegisterUserViewModel
@{
	ViewBag.PageTitle = "Регистрация";
}

<section id="form">
	<!--form-->
	<div class="row">
		<div class="col-sm-4 col-sm-offset-1">
			<div class="signup-form">
				<!--sign up form-->
				<h2>Регистрация пользователя</h2>
				<form asp-action="Register" asp-antiforgery="true">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<label asp-for="UserName" class="control-label"></label>
					<input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
					<span asp-validation-for="UserName" class="text-danger"></span>

					<label asp-for="Email" class="control-label"></label>
					<input asp-for="Email" type="text" placeholder="@nameof(Model.Email)" />
					<span asp-validation-for="Email" class="text-danger"></span>

					<label asp-for="Password" class="control-label"></label>
					<input asp-for="Password" placeholder="@nameof(Model.Password)" />
					<span asp-validation-for="Password" class="text-danger"></span>

					<label asp-for="ConfirmPassword" class="control-label"></label>
					<input asp-for="ConfirmPassword" placeholder="@nameof(Model.ConfirmPassword)" />
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>

					<button type="submit" class="btn btn-default">Зарегистрироваться</button>
				</form>
			</div><!--/sign up form-->
		</div>
	</div>
</section>
