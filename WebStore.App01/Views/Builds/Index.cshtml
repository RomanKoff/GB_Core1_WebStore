@using WebStore.App01.Models
@model IEnumerable<BuildModel>
@{
	ViewData["Title"] = "Корпуса университета";
}

@if (Model.Any())
{
	int i1 = 0;
	<table class="table table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Корпус</th>
				<th>Адрес</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				string url = Url.Action("Details", null,
					new { id = item.Keys.First() });
				<tr>
					<td>@(++i1).</td>
					<td><a href="@url">@Html.Raw(item.Description)</a></td>
					<td>@Html.Raw(item.Address)</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<p>Нет данных.</p>
}
